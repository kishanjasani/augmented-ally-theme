{
	"$schema": "https://schemas.wp.org/wp/6.3/theme.json",
	"version": 2,
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No Title Template",
			"postTypes": [
				"page",
				"post"
			]
		}
	],
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "620px",
			"wideSize": "1260px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fluid": true
		},
		"custom": {
			"spacing": {
				"small": "clamp(20px, 4vw, 40px)",
				"medium": "clamp(48px, 8vw, 100px)",
				"large": "clamp(100px, 12vw, 460px)",
				"outer": "min(4vw, 90px)"
			}
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"spacing": {
			"blockGap": "1.5rem"
		}
	}
}
